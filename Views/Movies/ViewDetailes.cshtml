@* define the model of the movie *@
@model Movies
@* define the viewsata *@
@{
    ViewData["Title"] = "View Detailes";

}
@* define style *@
@section Styles{
    <link rel="stylesheet" href="~/css/viewdetailes.css"/>
}
@* define the code *@
<section>
    <div class="movie_card" id="bright">
        <div class="info_section">
            <div class="w-50 row">
                <div class="col-md-5">
                    <img class="locandina" src="@Model.ImageUrl" width="100%" height="100%" />
                </div>
                <div class="col-md-7">
                    <h1>@Model.Name</h1>
                    <h4>@Model.Producer.FullName</h4>
                    <span class="minutes mt-0">@Model.StartDate.ToString("dd MMM yyy")</span>
                    <p class="type">@Model.Category</p>
                </div>
            </div>
            <div class="movie_desc">
                <p class="text">
                   @Model.Description
                </p>
                <div>
                   <div class="d-flex justify-content-between w-25">
                        <a><i class="fa-solid fa-share-nodes"></i></a>
                        <a><i class="fa fa-heart"></i></a>
                        <a><i class="fa-regular fa-message"></i></a>
                   </div>
                </div>
                <div class="mt-3">
                    <a asp-action="Index" asp-controller="Movies" class="btn btn-sm btn-primary"><i class="fa-solid fa-circle-chevron-left"></i> Back to Movies</a>

                </div>
            </div>
        </div>
        <div class="blur_back" style=" background: url(@Model.ImageUrl);"></div>
    </div>

</section>