@* define the model of cinemas *@
@model IEnumerable<Cinema>
@* define the viewdata *@
@{
    ViewData["Title"] = "List of Cinemas";
}
@* DefineSection code *@
<section>
    <div class="row">
        <div class="col-md-11 m-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                        <th>@Html.DisplayNameFor(model=>model.Name)</th>
                        <th>@Html.DisplayNameFor(model=>model.Description)</th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cenima in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="@cenima.Logo" title="@cenima.Name" style="width:150px;height:150px;border-radius:50%">
                            </td>
                            <td class="align-middle" style="width:20%">
                                @cenima.Name
                            </td>
                            <td class="align-middle" style="width:40%">
                                @cenima.Description
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-sm btn-outline-success" asp-action="Update" asp-route-Id="@cenima.Id">
                                    <i class="fa-regular fa-pen-to-square"></i> Edit
                                </a> |
                                <a class="btn btn-sm btn-danger text-white" asp-action="Delete" asp-route-Id="@cenima.Id">
                                    <i class="fa-regular fa-trash-can"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-sm btn-success" style="position:fixed; bottom:20px; right:15px"><i class="fa fa-plus"></i>Add New Cinema</a>
</section>
