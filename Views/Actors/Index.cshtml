@* define the model of actors *@
@model IEnumerable<Actor>

@* define viewdate *@
@{
    ViewData["Title"] = "List Of Actors";
}

@* define the code *@
<section>
    <!--using the model to show the data of the actors-->
    <div class="row">
        <div class="col-md-11 m-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model=>model.ImageUrl)</th>
                        <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                        <th>@Html.DisplayNameFor(model=>model.Bio)</th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actor in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="@actor.ImageUrl" title="@actor.FullName" style="width:150px;height:150px;border-radius:50%">
                            </td>
                            <td class="align-middle">
                                @actor.FullName
                            </td>
                            <td class="align-middle" style="width:40%">
                                @actor.Bio
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-sm btn-outline-success" asp-action="Update" asp-route-Id="@actor.Id">
                                    <i class="fa-regular fa-pen-to-square"></i> Edit
                                </a> |
                                <a class="btn btn-sm btn-outline-warning">
                                    <i class="fa-regular fa-eye"></i> View
                                </a> |
                                <a class="btn btn-sm btn-danger text-white" asp-action="Delete" asp-route-Id="@actor.Id">
                                    <i class="fa-regular fa-trash-can"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-sm btn-success" style="position:fixed; bottom:25px; right:25px"> 
        <i class="fa fa-plus mx-1"></i>Add New Actor</a>
</section>