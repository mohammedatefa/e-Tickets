@* define actor model to update *@
@model Actor
@* Define viewdata *@
@{
    ViewData["Title"] = "Update Actor";
}
@* define code *@
<section>
    <div class="row mb-5 pb-5">
        <div class="col-md-8 offset-md-2">
            <p>
                <h2>Update Current Actor</h2>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Update" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="text-center form-group">
                            <img src="@Model.ImageUrl" id="ImagePreview" style="max-width: 200px; max-height: 200px;" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input id="ImageUrlInput" asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                     @*    <div class="form-group">
                            <label asp-for="Id" class="form-label"></label>
                            <input asp-for="Id" class="form-control" readonly />
                        </div> *@
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bio" class="form-label"></label>
                            <input asp-for="Bio" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Update Now" class="btn btn-sm btn-success float-end" />
                            <a asp-action="Index" class="btn btn-sm btn-secondary">
                                Show All
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@* dfine scripts *@
@section Scripts{
    <script>
        // Get references to the input and img elements
        const imageUrlInput = document.getElementById('ImageUrlInput');
        const imagePreview = document.getElementById('ImagePreview');

        // Attach an 'input' event listener to the input field
        imageUrlInput.addEventListener('input', function () {
            // Get the value from the input field
            const imageUrl = this.value;

            // Set the 'src' attribute of the img tag to the entered URL
            imagePreview.src = imageUrl;
        });
    </script>

}
